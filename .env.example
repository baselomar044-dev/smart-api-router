# ==================== TRY-IT! AI CONFIGURATION ====================
# Copy this file to .env and fill in your values
# ⚠️ NEVER commit .env to version control!

# ================== OWNER CONFIGURATION ==================
# Your personal details for owner-mode features
OWNER_NAME=Basel
OWNER_EMAIL=basel_adel_92@yahoo.com
OWNER_UNLOCK_PHRASE=your-secret-phrase

# ================== SERVER ==================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
APP_URL=http://localhost:5173

# ================== SECURITY ==================
# CRITICAL: Generate strong secrets for production!
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=GENERATE_A_64_BYTE_SECRET_HERE
JWT_REFRESH_SECRET=GENERATE_ANOTHER_64_BYTE_SECRET
ENCRYPTION_KEY=GENERATE_32_BYTE_HEX_KEY

# Session settings
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS (comma-separated origins)
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# ================== DATABASE (Supabase) ==================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# ================== AI PROVIDERS ==================
# At least ONE provider is required for chat to work
# All are FREE tier available!

# Groq (fastest) - https://console.groq.com
GROQ_API_KEY=gsk_your_key_here

# Google Gemini - https://makersuite.google.com/app/apikey
GEMINI_API_KEY=AIza_your_key_here

# OpenRouter (access to many models) - https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-your_key_here

# ================== OPTIONAL AI PROVIDERS ==================
# For multi-model orchestration and specialized tasks

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_key_here

# Anthropic Claude - https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your_key_here

# Hugging Face - https://huggingface.co/settings/tokens
HUGGINGFACE_API_KEY=hf_your_key_here

# Replicate - https://replicate.com/account/api-tokens
REPLICATE_API_KEY=r8_your_key_here

# ================== SEARCH ==================
# For agent web search capabilities

# Brave Search API (recommended) - https://brave.com/search/api/
BRAVE_API_KEY=BSA_your_key_here

# SerpAPI (Google search) - https://serpapi.com/manage-api-key
SERP_API_KEY=your_key_here

# ================== INTEGRATIONS ==================
# OAuth credentials for integrations (optional)

# Google OAuth (Gmail, Calendar, Drive)
GOOGLE_CLIENT_ID=your_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/integrations/google/callback

# Slack
SLACK_CLIENT_ID=your_client_id
SLACK_CLIENT_SECRET=your_client_secret
SLACK_REDIRECT_URI=http://localhost:3001/api/integrations/slack/callback

# GitHub
GITHUB_CLIENT_ID=your_client_id
GITHUB_CLIENT_SECRET=your_client_secret
GITHUB_REDIRECT_URI=http://localhost:3001/api/integrations/github/callback

# Notion
NOTION_CLIENT_ID=your_client_id
NOTION_CLIENT_SECRET=your_client_secret
NOTION_REDIRECT_URI=http://localhost:3001/api/integrations/notion/callback

# Twitter/X
TWITTER_CLIENT_ID=your_client_id
TWITTER_CLIENT_SECRET=your_client_secret

# ================== MESSAGING ==================
# For WhatsApp, Telegram, SMS features

# WhatsApp Business API
WHATSAPP_PHONE_ID=your_phone_number_id
WHATSAPP_TOKEN=your_access_token

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token

# Twilio (SMS/Voice)
TWILIO_ACCOUNT_SID=your_account_sid
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ================== PAYMENTS ==================
# For Stripe, PayPal integration

STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_secret

# ================== COMPUTER USE ==================
# For browser automation features

# E2B for sandboxed code execution
E2B_API_KEY=e2b_your_key_here

# Browserless for web automation
BROWSERLESS_API_KEY=your_key_here

# ================== VOICE ==================
# For voice call features

# ElevenLabs TTS
ELEVENLABS_API_KEY=your_key_here

# Deepgram STT
DEEPGRAM_API_KEY=your_key_here

# ================== STORAGE ==================
# For file upload features

# AWS S3 (optional)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# ================== MONITORING ==================
# For production monitoring (optional)

# Sentry error tracking
SENTRY_DSN=https://your_sentry_dsn

# Posthog analytics
POSTHOG_API_KEY=your_key_here
POSTHOG_HOST=https://app.posthog.com
